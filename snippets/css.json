{
	// Place your snippets for css here. Each snippet is defined under a snippet name and has a prefix, body and 
	// description. The prefix is what is used to trigger the snippet and the body will be expanded and inserted. Possible variables are:
	// $1, $2 for tab stops, $0 for the final cursor position, and ${1:label}, ${2:another} for placeholders. Placeholders with the 
	// same ids are connected.
	// Example:

	// "Print to console": {
	// 	"prefix": "log",
	// 	"body": [
	// 		"console.log('$1');",
	// 		"$2"
	// 	],
	// 	"description": "Log output to console"
	// },

	"backdropF": {
		"prefix": "backdropF",
		"body": [
			".container {",
			"	background: rgba(0,0,0,0.8);",
			"	backdrop-filter: saturate(180%) blur(10px);",
			"}",
			"@supports (-webkit-backdrop-filter: none) or (backdrop-filter: none) {",
			"	.container {",
			"		-webkit-backdrop-filter: blur(10px);",
			"		backdrop-filter: blur(10px);",
			"	}",
			"}",
		],
		"description": "Backdrop filter example"
	},

	"filters": {
		"prefix": "filt",
		"body": [
			"brightness(<number-percentage>);",
			"contrast(<number-percentage>);",
			"grayscale(<number-percentage>);",
			"invert(<number-percentage>);",
			"opacity(<number-percentage>);",
			"saturate(<number-percentage>);",
			"sepia(<number-percentage>);",
			"hue-rotate(<angle>);",
			"blur(<length>);",
			"drop-shadow(<length><color>);",
		],
		"description": "All filters"
	},

	"All mix-blend-mode": {
		"prefix": "mix",
		"body": [
			"mix-blend-mode: screen;",
      "mix-blend-mode: hard-light;",
      "mix-blend-mode: hue;",
      "mix-blend-mode: soft-light;",
      "mix-blend-mode: saturation;",
      "mix-blend-mode: color;",
      "mix-blend-mode: color-burn;",
      "mix-blend-mode: overlay;",
      "mix-blend-mode: luminosity;",
      "mix-blend-mode: lighten;",
      "mix-blend-mode: exclusion;",
      "mix-blend-mode: darken;",
		],
		"description": "mix-blend-mode"
	},

	"cdiv center div flex": {
		"prefix": "cdiv",
		"body": [
			"display: flex;",
			"align-content: center;",
			"align-items: center;",
		],
		"description": "Center content"
	},

	"-out outline: 1px solid red;":{
		"prefix": "-out",
		"body": [ "outline: 1px solid red;" ],
		"description": "dev css"
	},

	"qtitle :: @{title} :: ": {
		"prefix": "qtit",
		"body": [
			"/* ------ :: @${1:POKEMONLIST} :: ------- */",
		],
		"description": "title :: @{} :: "
	},

	"grid 4, 1fr": {
		"prefix": "grid4",
		"body": [
			".${1:list} {",
			" max-width: ${2:1124px};",
			"	display: grid;",
			"	grid-template-columns: repeat(4, 1fr);",
			"	gap: 2rem;",
			" margin: 0 auto;",
			" justify-content: center;",
			"}",
		],
		"description": "grid column 4fr"
	},


}