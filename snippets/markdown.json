{
	// Place your snippets for markdown here. Each snippet is defined under a snippet name and has a prefix, body and 
	// description. The prefix is what is used to trigger the snippet and the body will be expanded and inserted. Possible variables are:
	// $1, $2 for tab stops, $0 for the final cursor position, and ${1:label}, ${2:another} for placeholders. Placeholders with the 
	// same ids are connected.
	// Example:
	// "Print to console": {
	// 	"prefix": "log",
	// 	"body": [
	// 		"console.log('$1');",
	// 		"$2"
	// 	],
	// 	"description": "Log output to console"
	// },

	"Comments for markdown": {
		"prefix": "qcom",
		"body": [
			"<!------------------------------------------------------------------------------------------------>",
			"<!----------------------$2------------------ @${1:NUEVA SECCION} ----------------$2-------------------->",
			"<!------------------------------------------------------------------------------------------------>",
			"$3",
			"<!----------------------$2---------------- @END ${1:NUEVA SECCION} --------------$2-------------------->",

		],
		"description": "Qute comments for markdown"
	},

	"imgp": {
		"prefix": "im",
		"body": [
			"<img src='./public/$1' alt='-$1' />",
		],
		"description": "img public"
	},
	"img": {
		"prefix": "im",
		"body": [
			"<img src='./assets/$1' alt='-$1' />",
		],
		"description": "img"
	},
	"imgEncadenate": {
		"prefix": "ime",
		"body": [
			"<img src='./assets/$1' alt='-$1' />\n",
			"h1$2",
		],
		"description": "imgEncadenate with h1"
	},
	"js": {
		"prefix": "js",
		"body": [
			"```js",
			"$1\n```",
		],
		"description": "code js"
	},
	"ts": {
		"prefix": "ts",
		"body": [
			"```ts",
			"$1\n```",
		],
		"description": "code ts"
	},
	"py": {
		"prefix": "py",
		"body": [
			"```py",
			"$1\n```",
		],
		"description": "code python"
	},
	"java": {
		"prefix": "java",
		"body": [
			"```java",
			"$1\n```",
		],
		"description": "code java"
	},
	"link": {
		"prefix": "li",
		"body": [
			"[$1]($2)",
		],
		"description": "link"
	},
}